<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/styles.css">
    <title>Schedule Planner</title>
</head>
<body>
    <%- include ('partials/navbar.ejs') %>
    <div class="container mt-3">
        <h2>Add on things to do</h2>

        <!-- TODO: Insert code for form tag to add new student -->
        <form action="/todos" method="POST">
            <div class="mb-3 mt-3">
                <label for="description">Short Description:</label>
                <input type="text" class="form-control" id="description" placeholder="Enter short description" name="description" maxlength="100">
            </div>
            <div class="mb-3 mt-3">
                <label for="note" class="form-label">Note:</label>
                <textarea class="form-control" id="note" placeholder="Enter note (200 Characters Max)" name="note" maxlength="200" rows="4"></textarea>
            </div>
            <div class="mb-3 mt-3">
                <label for="starttime">Start Time:</label>
                <input type="time" class="form-control" id="starttime" placeholder="Enter start time" name="starttime">
            </div>
            <div class="mb-3 mt-3">
                <label for="endtime">End Time:</label>
                <input type="time" class="form-control" id="endtime" placeholder="Enter end time" name="endtime">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</body>
</html>