<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/styles.css">

    <title>Schedule Planner</title>
</head>
<body>
    <%- include ('partials/navbar.ejs') %>
    <div class="container mt-3">
        <h2>Daily Calendar - <%= day %>/<%= month %>/<%= year %></h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Event</th>
                    <th>Start</th>
                    <th>End</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>

                <!-- to display the events information by looping through the events array-->
                <% for (let i =0; i < event.length; i++) { %>
                    <tr>
                        <td><a href="/events/<%= event[i].eventId %>?prevpage=dailycalendar"><%= event[i].eventname %></a></td>
                        <td><%= event[i].start.toLocaleDateString('en-SG', { weekday: 'short', year:"numeric", month:'short', day: 'numeric', hour:'2-digit', minute:'2-digit', hour12: false}) %></td>
                        <td><%= event[i].end.toLocaleDateString('en-SG', { weekday: 'short', year:"numeric", month:'short', day: 'numeric', hour:'2-digit', minute:'2-digit', hour12: false}) %></td>
                        <td><a href="/events/<%= event[i].eventId %>/update?prevpage=dailycalendar">Edit</a></td>
                        <td><a href="/events/<%= event[i].eventId %>/delete">Delete</a></td>
                    </tr>
                <% } %>
            </tbody>
        </table>
        <div class="d-grid">
            <a href="/events" class="btn btn-secondary btn-block">Add event</a>
        </div>
    </div>
</body>
</html>