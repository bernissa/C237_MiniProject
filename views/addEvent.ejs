<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script  src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/styles.css">
    <title>Schedule Planner</title>
</head>
<body>
    <%- include ('partials/navbar.ejs') %>
    <div class="container mt-3">
        <h2>Add Event</h2>

        <!-- Form tag to add new event -->
        <form action="/events" method="POST">
            <div class="mb-3 mt-3">
                <label for="eventname">Event:</label>
                <input type="text" class="form-control" id="eventname" placeholder="Enter an event" name="eventname" maxlength="100">
            </div>
            <div class="mb-3 mt-3">
                <label for="start">Start:</label>
                <input type="datetime-local" class="form-control" id="start" placeholder="Enter start" name="start">
            </div>
            <div class="mb-3 mt-3">
                <label for="end">End:</label>
                <input type="datetime-local" class="form-control" id="end" placeholder="Enter end" name="end">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</body>
</html>