<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/styles.css">
    
    <title>Schedule Planner</title>
</head>
<body>
    <%- include ('partials/navbar.ejs') %>
    <div class="container mt-3">
        <h2>To-Do Information</h2>

        <% function formattedTime(timestring) { 
            const [hours, minutes] = timestring.split(':'); 
            return `${hours}:${minutes}`; 
        } %>

        <% if (todo) { %> <!-- Check if todo data exists -->
            <div>
                <p><b>Description:</b><br> <%= todo.description %></p>
                <p><b>Note:</b><br>  <%= todo.note %></p>
                <p><b>Start Time:</b><br> <%= formattedTime(todo.starttime) %></p>
                <p><b>End Time:</b><br> <%= formattedTime(todo.endtime) %></p>
            </div>
        <% } else { %>
            <p>No to-do found.</p>
        <% } %>
        <a href="/list">Back</a>
    </div>
</body>
</html>