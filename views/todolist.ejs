<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/styles.css">
    
    <title>To-Do List</title>
</head>
<body>
    <%- include ('partials/navbar.ejs') %>
    <div class="container mt-3">
        <h2>To-Do List</h2>          
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Short Description</th>
                    <th>Start</th>
                    <th>End</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>

                <% function formattedTime(timestring) { 
                    const [hours, minutes] = timestring.split(':'); 
                    return `${hours}:${minutes}`; 
                } %>

                <!-- to display the todos information by looping through the todos array-->
                <% for (let i =0; i < todo.length; i++) { %>
                    <tr>
                        <td><a href="/todos/<%= todo[i].todoId %>"><%= todo[i].description %></a></td>
                        <td><%= formattedTime(todo[i].starttime) %></td>
                        <td><%= formattedTime(todo[i].endtime) %></td>
                        <td><a href="/todos/<%= todo[i].todoId %>/update">Edit</a></td>
                        <td><a href="/todos/<%= todo[i].todoId %>/delete">Delete</a></td>
                    </tr>
                <% } %>
            </tbody>
        </table>
        <div class="d-grid">
            <a href="/todos" class="btn btn-secondary btn-block">Add on things to do</a>
        </div>
    </div>
</body>
</html>